<h1>Categories Show Page</h1>
<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap flex-col mt-8">
    <h2 class="text-lg text-gray-800">Filters</h2>
  </div>
  <div class="flex flex wrap gap-10 flex-grow justify-center items-start">
    <% if @products.empty? %>
      <p class="text-2xl text-left text-gray-800">No products found</p>
    <% else %>
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="max-w-xs flex flex-col p-4 justify-center items-center">
          <%= product.images.first ? image_tag(product.images.first.variant(:medium), class: "rounded") : image_tag("https://via.placeholder.com/250") %>
          <p class="mt-6 font-medium text-gray-800"><%= product.name %></p>
        </div>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>